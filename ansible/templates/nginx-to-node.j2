upstream techfriday {
  server localhost:3000;
}

proxy_cache_path /var/www/cache levels=2:2 keys_zone=pipeline:200m inactive=365d max_size=10g;

server {
  server_name techfriday.ru www.techfriday.ru;
  listen 80;
  gzip on;
  
  client_max_body_size 10m;
  gzip_types text/plain text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript application/json;                                                                      
  
  
  root /var/www/techfriday/public;
  
  location ~* ^\/node {
    proxy_pass http://techfriday; # match the name of upstream directive which is defined above
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}
  